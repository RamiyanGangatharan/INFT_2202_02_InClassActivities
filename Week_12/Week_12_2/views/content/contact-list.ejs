<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>contact-list</title>

    <link rel="stylesheet" href="../../node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../node_modules/@fortawesome/fontawesome-free/css/all.css">
    <link rel="stylesheet" href="../../client/Content/app.css">

    <script src="../../client/Scripts/namespace.js"></script>
    <script src="../../client/Scripts/router.js"></script>
    <script src="../../client/Scripts/contact.js"></script>
    <script src="../../client/Scripts/user.js"></script>
</head>
<body>
<header></header>
<h1 class="mb-5">Contact List</h1>
<div class="row">
    <div class="col">
        <button id="addButton" class="btn btn-primary btn-sm mb-1">
            <i class="fas fa-plus fa-sm">Add Contact</i>
        </button>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
            <tbody id="contactList">
            <% for (let count = 0; count < contacts.length; count++) { %>
            <tr>
                <th scope="row" class="text-center">${index}<%=count+1 %></th>
                <td><%= contacts[count].FullName%></td>
                <td><%= contacts[count].EmailAddress%></td>
                <td><%= contacts[count].contactNumber%></td>
                <td class="text-center">
                    <a href="/edit/<%= contacts[count]._id %>"
                       class="btn btn-primary btn-sm edit">
                        <i class="fas fa-edit fa-sm">&nbsp;Edit</i>
                    </a>
                </td>
                <td>
                    <a href="/delete/<%= contacts[count]._id%>"
                       class="btn btn-danger btn-sm delete">
                        <i class="fas fa-trash-alt fa-sm">&nbsp;Delete</i>
                    </a>
                </td>
            </tr>
            <% } %>
            </tbody>
            <tbody id="contactList"></tbody>
        </table>
    </div>
</div>
<footer></footer>
</body>
<script src="../../node_modules/jquery/dist/jquery.min.js"></script>
<script src="../../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="../../client/Scripts/app.js"></script>
</html>